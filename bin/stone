#!/bin/bash


. /etc/docklet/docklet.conf

HOME_PREF=${NFS_PREFIX}

[[ "`whoami`" != "root" ]] && echo "Root previledge required!" && exit 1

[[ "${USER_NAME}" == "" ]] && echo "USER_NAME not specified!" && exit 1

rm -rf "${HOME_PREF}/${USER_NAME}/home/.ssh"
mkdir -p ${HOME_PREF}/${USER_NAME}/home/.ssh/ ${HOME_PREF}/${USER_NAME}/ssh_keys

if [[ ! -e "${HOME_PREF}/${USER_NAME}/ssh_keys/id_rsa" ]] || [[ "$@" == "update" ]]; then
	rm -rf ${HOME_PREF}/${USER_NAME}/ssh_keys/*
	echo -e '\n' | ssh-keygen -t rsa -P '' -f "${HOME_PREF}/${USER_NAME}/ssh_keys/id_rsa" >/dev/null 2>&1
	mv "${HOME_PREF}/${USER_NAME}/ssh_keys/id_rsa.pub" "${HOME_PREF}/${USER_NAME}/ssh_keys/authorized_keys"
fi

# mkdir -p ${HOME_PREF}/${USER_NAME}/home/.vnc/
# if [[ ! -e "${HOME_PREF}/${USER_NAME}/home/.vnc/passwd" ]] || [[ "$@" == "reset" ]]; then
# 	echo '0000000: 4940 15f9 a35e 8b22' | xxd -r > "${HOME_PREF}/${USER_NAME}/home/.vnc/passwd"
# 	chmod 0600 "${HOME_PREF}/${USER_NAME}/home/.vnc/passwd"
# fi

cat "${HOME_PREF}/${USER_NAME}/ssh_keys/id_rsa"
