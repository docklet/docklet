#!/bin/bash

set -e

if [[ "$@" == "" ]]; then
	echo "Usage: docklet [hosts | portal | status | ..]"
	true
elif [[ "$@" == "hosts" ]]; then
	HOSTS=$(echo `cat /etc/hosts | grep nat | awk '{print $2}'` | tr ' ' ',')
	echo ${HOSTS}
elif [[ "$@" == "portal" ]]; then
	ssh root@nat-master ip addr 2>/dev/null | grep global\ eth0 | awk '{ print $2}' | awk -F\/ '{print $1}'
elif [[ "$@" == "status" ]]; then
	for HOST in `cat /etc/hosts | grep nat | awk '{print $2}'`; do
		echo -n "* docklet ${HOST} : "
		if ssh -o ConnectTimeout=5 root@${HOST} true 2>/dev/null; then
			echo "live."
		else
			echo "dead."
		fi
	done
else
	false
fi 
