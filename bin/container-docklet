#!/bin/bash

set -e

if [[ "$@" == "" ]]; then
	echo -e "\033[34mUsage for lookup info:\033[0m docklet [clusterid|owner|hosts|portal|status|..]" > /dev/stderr
	echo -e "\033[34mUsage for control cluster:\033[0m docklet [scaleup|scaledown|repair|restart]" > /dev/stderr
	true
elif [[ "$@" == "clusterid" ]]; then
	cat /etc/hosts | grep \ host- | awk -F\- '{print $2}' | awk -F\_ '{print $1}'
elif [[ "$@" == "owner" ]]; then
	cat /etc/hosts | grep \ host- | awk -F\_ '{print $2}'
elif [[ "$@" == "hosts" ]]; then
	HOSTS=$(echo `cat /etc/hosts | grep \ nat- | awk '{print $2}'` | tr ' ' ',')
	echo ${HOSTS}
elif [[ "$@" == "portal" ]]; then
	cat /etc/hosts | grep \ host- | awk '{print $1}'
elif [[ "$@" == "status" ]]; then
	for HOST in `cat /etc/hosts | grep \ nat- | awk '{print $2}'`; do
		echo -n "* docklet ${HOST} : "
		if ping -c 1 -w 5 ${HOST} >/dev/null 2>&1; then
			echo "ready."
		else
			echo "no response."
		fi
	done
elif [[ "$@" == "scaleup" ]]; then
	curl -F user=$(docklet owner) -F key=@${HOME}/.ssh/id_rsa http://docklet-cloud:8000/clusters/$(docklet clusterid)/scaleup
elif [[ "$@" == "scaledown" ]]; then
	curl -F user=$(docklet owner) -F key=@${HOME}/.ssh/id_rsa http://docklet-cloud:8000/clusters/$(docklet clusterid)/scaledown
elif [[ "$@" == "restart" ]]; then
	curl -F user=$(docklet owner) -F key=@${HOME}/.ssh/id_rsa http://docklet-cloud:8000/clusters/$(docklet clusterid)/restart
elif [[ "$@" == "repair" ]]; then
	curl -F user=$(docklet owner) -F key=@${HOME}/.ssh/id_rsa http://docklet-cloud:8000/clusters/$(docklet clusterid)/repair
else
	false
fi 
